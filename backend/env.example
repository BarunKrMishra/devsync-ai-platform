# DevSync Backend Environment Variables
# Copy this to .env for local development

# Server Configuration
PORT=8000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT Secrets (for local development only)
JWT_SECRET=your-super-secret-jwt-key-for-local-development-only
JWT_REFRESH_SECRET=your-super-secret-refresh-key-for-local-development-only

# AI API Keys (you'll need to get these from OpenAI and Anthropic)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Encryption Keys (for secrets vault - generate secure keys for production)
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_IV=your-16-character-iv-here

# Database URLs (commented out for local testing without databases)
# DATABASE_URL="postgresql://devsync:devsync_password@localhost:5432/devsync"
# NEO4J_URI="bolt://localhost:7687"
# NEO4J_USERNAME="neo4j"
# NEO4J_PASSWORD="devsync_password"
# MONGODB_URI="mongodb://localhost:27017"
# MONGODB_DB_NAME="devsync"
# REDIS_URL="redis://localhost:6379"

# OAuth Configuration (optional for local testing)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Monitoring (optional for local)
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces
